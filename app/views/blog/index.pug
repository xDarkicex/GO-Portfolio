extends ../layouts/application.pug
block main
    div.container-fluid
        h1 Blog Index #{count}
         if user && user.Admin
            div.panel.panel-default 
                div.panel-heading
                    h3.panel-title Admin controls
                div.panel-body
                    a.btn.btn-primary(href=('/posts/new')) New Post
        if blog
            each post in blog
                div.card
                    div.card-block
                        h4.card-title
                            time #[= post.Time]
                        p.Card-text
                            p Post Created by: #[= post.Author.Name]
                        p.card-text!= post.Body
                        a.btn.btn-primary(href=("/post/"+post.URL)) Read More
                        if user && user.Admin
                            a.btn.btn-primary(href=("post/"+post.URL+"/edit")) EDIT
                            a.btn.btn-primary(data-method="DELETE" href=('/post/'+post.URL) confirmable="Are you sure you want to delete this post?") DELETE
