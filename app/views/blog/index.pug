extends ../layouts/application.pug
block main
    div.container-fluid
        div.row(style="padding-top:20px;margin-left:0.1em;margin-right:5em;")
            if user && user.Admin
                div.pull-right: a.btn.btn-primary(href=('/posts/new')) New Post
            h1 Blog Index
        if blog
            each post in blog
                div.card
                    div.card-block
                        h4.card-title: time #[= post.Time]
                        p.Card-text: p Post Created by: #[= post.Author.Name]
                        p.card-text!= post.Body
                        a.btn.btn-primary(href=("/post/"+post.URL)) Read More
                        if user && user.Admin
                            a.btn.btn-primary(href=("post/"+post.URL+"/edit")) EDIT
                            a.btn.btn-primary(data-method="DELETE" href=('/post/'+post.URL) confirmable="Are you sure you want to delete this post?") DELETE
