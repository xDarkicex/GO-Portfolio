extends ../layouts/application.pug

block main-content
    div.container-fluid
        h1 blog post
        p= .post.Author.Name
        div.card-img-top(style="height: 150px; background: url(/post/{{.post.URL}}/images/{{.post.BlogImage}})center center no-repeat; background-size: cover;")
        p= .post.Title
        hr
        p {{.post.Body}}
        if .current_user.Admin
            a.btn.btn-primary(data-method="DELETE" href= /post/{{.post.URL}} confirmable="Are you sure you want to delete this post?") DELETE