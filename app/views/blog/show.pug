extends ../layouts/application.pug

block main
    div.container-fluid
        h1 blog post
        p= post.Author.Name
        img.titleImage(src='/post/'+post.URL+'/images/'+post.BlogImage)
        p= post.Title
        p!= post.Body
        if user && user.Admin
            a.btn.btn-primary(data-method="DELETE" href=('/post/'+post.URL) confirmable="Are you sure you want to delete this post?") DELETE