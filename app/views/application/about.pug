    div.container-fluid
        div.col-sm-3.lead(style='text-align:center;')
            div.box
                div.Avatar(style="height: 100px; min-width: 100px; align-self: center; border-radius: 50%; background: url(/users/{{.user.Name}}/images/{{.user.Avatar}})center center no-repeat;background-size: cover;")
                div  
                    strong= .user.FullName
                    p.small.lead Founder #[a(href='https://bitdev.io') BitDev.io]
